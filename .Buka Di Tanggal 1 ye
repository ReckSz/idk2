import turtle
import time

# Set up the screen
screen = turtle.Screen()
screen.setup(800, 600)
screen.bgcolor("black")
screen.title("Happy Birthday!")

# Create a turtle for drawing
t = turtle.Turtle()
t.hideturtle()
t.speed(0)

# Function to draw a flower
def draw_flower(x, y, size, color):
    t.penup()
    t.goto(x, y)
    t.color(color)
    t.pendown()
    for _ in range(6):
        t.circle(size, 60)
        t.left(120)
        t.circle(size, 60)
        t.left(60)

# Function to write text with calligraphy-style
def write_calligraphy(text, x, y, font_size, color):
    t.penup()
    t.goto(x, y)
    t.color(color)
    t.write(text, align="center", font=("Brush Script MT", font_size, "normal"))

# Draw border
t.penup()
t.goto(-380, 280)
t.pendown()
t.pensize(5)
t.color("goldenrod")
for _ in range(2):
    t.forward(760)
    t.right(90)
    t.forward(560)
    t.right(90)

# Draw flowers
flower_positions = [(-300, 200), (300, 200), (-300, -200), (300, -200)]
for x, y in flower_positions:
    draw_flower(x, y, 30, "rosybrown")

# Write birthday message
write_calligraphy("Happy Birthday Saskia", 0, 70, 60, "darkgoldenrod")

# Draw cake
t.penup()
t.goto(-100, -100)
t.pendown()
t.color("burlywood")
t.begin_fill()
for _ in range(2):
    t.forward(200)
    t.left(90)
    t.forward(100)
    t.left(90)
t.end_fill()

# Draw cake topping
t.penup()
t.goto(-90, 0)
t.pendown()
t.color("peru")
t.begin_fill()
for _ in range(2):
    t.forward(180)
    t.left(90)
    t.forward(20)
    t.left(90)
t.end_fill()

# Draw candles
candle_positions = [-60, 0, 60]
for x in candle_positions:
    t.penup()
    t.goto(x, 20)
    t.pendown()
    t.color("floralwhite")
    t.begin_fill()
    for _ in range(2):
        t.forward(10)
        t.left(90)
        t.forward(30)
        t.left(90)
    t.end_fill()
    
    # Draw flame
    t.penup()
    t.goto(x + 5, 50)
    t.pendown()
    t.color("gold")
    t.begin_fill()
    t.circle(3)
    t.end_fill()

# Write final message
write_calligraphy("Semoga Semua Harapannya Terwujud", 0, -150, 36, "saddlebrown")

# Hide turtle and keep the window open
t.hideturtle()
screen.mainloop()
